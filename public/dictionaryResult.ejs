<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dictionary Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/dictionaryResult.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="index.html"> Dimash </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" href="index.html">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="weather.html"> Weather </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="dictionary.html"> Dictionary </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="translater.html"> Translator </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <div class="container">
        <h1 class="text-center">Dictionary Result</h1>

        <div class="dictionary-details">
            <% if (dictionaryData.length > 0) { %>
                <h2 class="text-center">Word: <%= dictionaryData[0].word %></h2>
        
                <% dictionaryData.forEach((entry, index) => { %>
                    <h3><%= entry.meanings[0].partOfSpeech %></h3>
                    <% entry.meanings.forEach((meaning) => { %>
                        <p><strong>Definition:</strong> <%= meaning.definitions[0].definition %></p>
                        <p><strong>Synonyms:</strong> <%= meaning.definitions[0].synonyms.join(', ') || 'Not available' %></p>
                        <p><strong>Antonyms:</strong> <%= meaning.definitions[0].antonyms.join(', ') || 'Not available' %></p>
                    <% }); %>
                    <% if (index < dictionaryData.length - 1) { %>
                        <hr>
                    <% } %>
                <% }); %>
        
            <% } else { %>
                <h2 class="text-center">Word: <%= dictionaryData.message %></h2>
                <p><strong>No definitions found for the word.</strong></p>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
